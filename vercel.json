{
  "version": 2,
  "env": {
    "NODE_ENV": "production"
  },
  "buildCommand": "cd server && npm install && cd ../client && npm install && npm run build",
  "outputDirectory": "client/dist",
  "public": "client/dist",
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs18.x",
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "^/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "^/.*$",
      "dest": "/index.html"
    }
  ]
}
